<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreationHomeActivity"
    android:background="@drawable/bg">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCreationhome"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#2E7D32"
        app:title="Création nouvelle maison"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scroll Area -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbarCreationhome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <EditText
                android:id="@+id/edtHomeTitle"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/white_bg"
                android:hint="Titre"
                android:padding="12dp"
                android:textColor="#1B5E20"
                android:textColorHint="#1B5E20"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="16dp"/>

            <!-- Price -->
            <EditText
                android:id="@+id/edtHomePrice"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/white_bg"
                android:hint="Prix (DT)"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#1B5E20"
                android:textColorHint="#1B5E20"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="16dp"/>

            <!-- Address -->
            <EditText
                android:id="@+id/edtHomeAddress"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/white_bg"
                android:hint="Adresse"
                android:padding="12dp"
                android:textColor="#1B5E20"
                android:textColorHint="#1B5E20"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="16dp"/>

            <!-- Area -->
            <EditText
                android:id="@+id/edtHomeArea"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/white_bg"
                android:hint="Superficie (m²)"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#1B5E20"
                android:textColorHint="#1B5E20"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="16dp"/>

            <!-- Description -->
            <EditText
                android:id="@+id/edtHomeDescription"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/white_bg"
                android:hint="Description"
                android:gravity="top"
                android:padding="12dp"
                android:textColor="#1B5E20"
                android:textColorHint="#1B5E20"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="16dp"/>

            <!-- Add Images Button -->
            <Button
                android:id="@+id/btnAddImages"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="#2E7D32"
                android:text="Ajouter des images"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="10dp"/>

            <!-- Image preview -->
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imagePreview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nohouse"
                android:layout_marginBottom="16dp"
                android:background="@drawable/white_bg"/>

            <!-- Save Button -->
            <Button
                android:id="@+id/btnHomeSave"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#2E7D32"
                android:text="Enregistrer"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_semibold" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
